{
  "name": "pasteboard",
  "version": "2.0.0",
  "description": "",
  "main": "build/server.js",
  "scripts": {
    "check-types:server": "tsc --noEmit --project server.tsconfig.json",
    "check-types:client": "tsc --noEmit --project client.tsconfig.json",
    "build:server": "npm run check-types:server & esbuild src/server/index.ts --tsconfig=server.tsconfig.json --platform=node --bundle --outfile=build/server.js",
    "build:client": "npm run check-types:client & esbuild src/client/index.ts --tsconfig=client.tsconfig.json --platform=node --bundle --outfile=build/bundles/client.js",
    "start": "npm run build:client && npm run build:server && node build/server.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "graphql": "^16.3.0",
    "nunjucks": "^3.2.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/nunjucks": "^3.2.1",
    "esbuild": "^0.14.25",
    "typescript": "^4.6.2"
  }
}
