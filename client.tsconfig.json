{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./output/client",
    "jsx": "react"
  },
  "include": [
    "src/client/**/*.ts", "src/client/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}